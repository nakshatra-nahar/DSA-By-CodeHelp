#include <iostream>
using namespace std;
int main() {
    int size;
    cout<<"Enter Size :- ";
    cin>>size;
    int count = 1;
    int i=1;
    while(i<=size){
        int space = size-i;
        while(space){
            cout<<" ";
            space--;
        }
        int j = 1;
        while(j<=i){
            cout<<count<<"";
            count++;
            j++;
        }
        cout<<endl;
        i++;
    }
    return 0;
}
