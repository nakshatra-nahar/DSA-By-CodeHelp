#include <iostream>
using namespace std;
int main() {
    int size;
    cout<<"Enter Size :- ";
    cin>>size;
    for(int i=1;i<=size;i++){
        
        // spaces
        for(int j=1;j<i;j++){
            cout<<" ";
        }
        
        // Number
        for(int k=i;k<=size;k++){
            cout<<k<<"";
        }
        cout<<endl;
    }
    return 0;
}
