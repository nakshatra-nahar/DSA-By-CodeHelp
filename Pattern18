#include <iostream>
using namespace std;
int main() {
    int size;
    cout<<"Enter Size :- ";
    cin>>size;
    int i =1;
    while(i<=size){
        
        // For Space
        int space = size-i;
        while(space){
            cout<<" ";
            space--;
        }
        
        
        // For Star
        int j=1;
        while(j<=i){
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
    return 0;
}
